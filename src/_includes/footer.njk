<footer class="bg-gray-900 text-white mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-serif font-bold mb-4">{{ site.name }}</h3>
        <p class="text-gray-400">{{ site.description }}</p>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Navigace</h4>
        <ul class="space-y-2">
          {% for item in navigation.items %}
          <li>
            <a href="{{ item.url }}" class="text-gray-400 hover:text-white transition-colors">
              {{ item.title }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Kontakt</h4>
        <p class="text-gray-400">
          <a href="/kontakt" class="hover:text-white transition-colors">Kontaktní informace</a>
        </p>
      </div>
    </div>
    
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {% currentYear %} {{ site.name }}. Všechna práva vyhrazena.</p>
    </div>
  </div>
</footer>

